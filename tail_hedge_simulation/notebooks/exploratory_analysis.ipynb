# Tail Hedge Simulation: Exploratory Analysis

import pandas as pd
import matplotlib.pyplot as plt
from src.risk_premia import simulate_risk_premia
from src.optimizer import optimize_portfolio

# Simulate risk premia returns
returns = simulate_risk_premia()

# Optimize portfolio using semi-variance
weights_semi = optimize_portfolio(returns, method="semi")

# Optimize portfolio using CVaR
weights_cvar = optimize_portfolio(returns, method="cvar")

# Compare portfolio returns
portfolio_semi = returns @ weights_semi
portfolio_cvar = returns @ weights_cvar

# Plot cumulative returns
plt.figure(figsize=(10, 6))
plt.plot(portfolio_semi.cumsum(), label="Semi-variance Optimized")
plt.plot(portfolio_cvar.cumsum(), label="CVaR Optimized")
plt.title("Cumulative Portfolio Returns")
plt.xlabel("Days")
plt.ylabel("Cumulative Return")
plt.legend()
plt.grid(True)
plt.show()

# Display weights
print("Semi-variance Weights:\n", pd.Series(weights_semi, index=returns.columns))
print("CVaR Weights:\n", pd.Series(weights_cvar, index=returns.columns))


from src.hedge_overlay import simulate_hedge_overlay

# Simulate market returns (e.g., from S&P 500 or synthetic)
market_returns = returns.mean(axis=1)  # average of risk premia as proxy

# Apply hedge overlay
hedged_df = simulate_hedge_overlay(market_returns, hedge_allocation=0.03)

# Plot cumulative returns
plt.figure(figsize=(10, 6))
plt.plot(hedged_df["Traditional"].cumsum(), label="Traditional Portfolio")
plt.plot(hedged_df["Combined"].cumsum(), label="With Hedge Overlay")
plt.title("Portfolio Insurance Effect")
plt.xlabel("Months")
plt.ylabel("Cumulative Return")
plt.legend()
plt.grid(True)
plt.show()

# Summary stats
print("Average Monthly Cost of Hedge:", hedged_df["Hedge"][hedged_df["Hedge"] < 0].mean())
print("Max Monthly Payoff from Hedge:", hedged_df["Hedge"].max())
print("Drawdown Protection (Worst Month):")
print("  Traditional:", hedged_df["Traditional"].min())
print("  Combined:", hedged_df["Combined"].min())
